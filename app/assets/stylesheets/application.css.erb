	display: none;
	width: 60px;
	height: 60px;
	text-indent: -9999px;
	position: fixed;
	z-index: 999;
	right: 20px;
	bottom: 20px;
  border-radius: 30px;
	background-color: #337ab7;
  background-image: url('<%= asset_path('arrow-up-grey.png') %>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
